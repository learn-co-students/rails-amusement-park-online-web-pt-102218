<%= form_for @user do |f| %>
  <div class="form_group_row">
  <%= f.label :name %>
  <%= f.text_field :name %> </div> <br>
  <div class="form_group_row">
  <%= f.label :tickets, "How many dollars are in your pocket?", class: "col-form-label" %>
  <%= f.text_field :tickets %> </div> <br>
  <div class="form_group_row">
  <%= f.label :nausea, "How nauseous are you right now, on a scale of 1-5?" %>
  <%= f.text_field :nausea %> </div> <br>
  <div class="form_group_row">
  <%= f.label :happiness, "How happy are you at the moment, on a scale of 1-5?"%>
  <%= f.text_field :happiness %> </div> <br>
  <div class="form_group_row">
  <%= f.label :height, "How tall are you, in inches?" %>
  <%= f.text_field :height %> </div> <br>
  <div class="form_group_row">
  <%= f.label :admin, "Are you an admin?" %>
  <%= f.check_box :admin %> </div> <br>
  <div class="form_group_row">
  <%= f.label :password %>
  <%= f.password_field :password %> </div> <br>

  <%= f.submit 'Create User' %>
<% end %>