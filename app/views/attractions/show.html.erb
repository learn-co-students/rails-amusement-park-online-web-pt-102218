<h1><%= @attraction.name %></h1>
<table>
  <tr>
    <td>Ticket Cost:</td>
    <td><%= @attraction.tickets %></td>
  </tr>
  <tr>
    <td>Nausea Rating:</td>
    <td><%= @attraction.nausea_rating %></td>
  </tr>
  <tr>
    <td>Fun Value:</td>
    <td><%= @attraction.happiness_rating %></td>
  </tr>
</table>
<br>
<% unless logged_in_as_admin? %>
  <%= form_tag rides_path(@ride) do %>
    <%= hidden_field_tag :user_id, @ride.user_id %>
    <%= hidden_field_tag :attraction_id, @ride.attraction_id %>
    <h3><%= submit_tag "Go on this ride" %></h3>
  <% end %>
  <% else %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>